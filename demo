<!DOCTYPE html>
<html lang="zh">
<head>
  <meta charset="UTF-8">
  <title>我的 Modal LLM 界面</title>
  <style>
    body { font-family: sans-serif; max-width: 600px; margin: auto; padding: 20px; }
    textarea { width: 100%; height: 100px; }
    button { padding: 10px 20px; margin-top: 10px; }
    .output { margin-top: 20px; white-space: pre-wrap; background: #f5f5f5; padding: 10px; border-radius: 6px; }
  </style>
</head>
<body>
  <h2>Modal LLM 聊天界面</h2>
  <textarea id="input" placeholder="请输入问题..."></textarea><br>
  <button onclick="callModel()">提交</button>

  <div class="output" id="result"></div>

  <script>
    async function callModel() {
      const userInput = document.getElementById("input").value;
      document.getElementById("result").innerText = "正在生成回复...";

      const response = await fetch("https://your-workspace--example-vllm-inference-serve.modal.run/v1/chat/completions", {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({
          model: "llm",   // 这里就是你在 serve 里定义的模型名
          messages: [
            {"role": "system", "content": "You are a helpful assistant."},
            {"role": "user", "content": userInput}
          ],
          stream: false   // 如果要流式，可以改成 true（需要特殊处理）
        })
      });

      const data = await response.json();
      if (data.choices && data.choices.length > 0) {
        document.getElementById("result").innerText = data.choices[0].message.content;
      } else {
        document.getElementById("result").innerText = "API 返回格式不正确: " + JSON.stringify(data);
      }
    }
  </script>
</body>
</html>
